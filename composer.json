{
  "name": "infinum/coding-standards-wp",
  "type": "phpcodesniffer-standard",
  "description": "Infinum Coding Standards for WordPress",
  "keywords": [
    "phpcs",
    "standards",
    "WordPress",
    "Infinum",
    "Eightshift"
  ],
  "homepage": "https://github.com/infinum/coding-standards-wp",
  "license": "MIT",
  "authors": [
    {
      "name"    : "Denis Å½oljom",
      "homepage": "https://github.com/dingo-d",
      "role"    : "Lead developer"
    },
    {
      "name"    : "Contributors",
      "homepage": "https://github.com/infinum/coding-standards-wp/graphs/contributors"
    }
  ],
  "require": {
    "php": ">=7.1",
    "squizlabs/php_codesniffer": "^3.5.0",
    "wp-coding-standards/wpcs" : "^2.2.0",
    "phpcompatibility/phpcompatibility-wp": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.0 || ^5.0 || ^6.0 || ^7.0",
    "phpcompatibility/php-compatibility": "^9.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.6",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "jakub-onderka/php-console-highlighter": "^0.4",
    "roave/security-advisories": "dev-master"
  },
  "scripts": {
      "tests:run": "@php ./vendor/phpunit/phpunit/phpunit --filter Infinum --bootstrap=\"./vendor/squizlabs/php_codesniffer/tests/bootstrap.php\" ./vendor/squizlabs/php_codesniffer/tests/AllTests.php",
      "tests:checkcs": "@standards:check --standard=./Infinum ./tests/",
      "lint": "@php ./vendor/bin/parallel-lint --exclude .git --exclude .github --exclude vendor .",
      "standards:list": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs -i",
      "standards:check": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
      "standards:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"
    },
  "support": {
    "issues": "https://github.com/infinum/coding-standards-wp/issues",
    "source": "https://github.com/infinum/coding-standards-wp"
  }
}
