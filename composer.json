{
    "name": "infinum/coding-standards-wp",
    "type": "phpcodesniffer-standard",
    "description": "Infinum WordPress Coding Standards",
    "keywords": [
      "phpcs",
      "standards",
      "WordPress",
      "Infinum",
      "Eightshift"
    ],
    "homepage": "https://github.com/infinum/coding-standards-wp",
    "license": "MIT",
    "authors": [
      {
        "name"    : "Denis Å½oljom",
        "homepage": "https://github.com/dingo-d",
        "role"    : "Lead developer"
      },
      {
        "name"    : "Contributors",
        "homepage": "https://github.com/infinum/coding-standards-wp/graphs/contributors"
      }
    ],
    "require": {
      "php": ">=7.0",
      "squizlabs/php_codesniffer": "^3.4.2",
      "phpcompatibility/phpcompatibility-wp": "^2.1",
      "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
      "wp-coding-standards/wpcs" : "^2.1.0"
    },
    "require-dev": {
      "jakub-onderka/php-parallel-lint": "^1.0",
      "phpunit/phpunit": "^4.0 || ^5.0 || ^6.0 || ^7.0",
      "phpcompatibility/php-compatibility": "^9.0",
      "roave/security-advisories": "dev-master"
    },
    "scripts": {
      "run-tests": "@php ./vendor/phpunit/phpunit/phpunit --filter Infinum --bootstrap=\"./vendor/squizlabs/php_codesniffer/tests/bootstrap.php\" ./vendor/squizlabs/php_codesniffer/tests/AllTests.php",
      "lint": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
      "phpcs-i": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs -i",
      "checkcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
      "fixcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"
    },
    "support": {
      "issues": "https://github.com/infinum/coding-standards-wp/issues",
      "source": "https://github.com/infinum/coding-standards-wp"
    }
}
